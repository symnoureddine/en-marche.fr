{% set has_role_user = is_granted('ROLE_USER') %}
{% set has_role_adherent = is_granted('ROLE_ADHERENT') %}
{% set has_role_admin = is_granted('ROLE_ADMIN_DASHBOARD') %}

<header>
    {% set adherent_committees = '' %}
    {# Prerendering this block and saving it in a variable prevents extra SQL queries #}
    {% if has_role_adherent %}
        {% set adherent_committees %}
            {{ render(controller('AppBundle\\Controller\\EnMarche\\AdherentController:listMyCommitteesAction')) }}
        {% endset %}
        {% set al_committees %}
            {{ render(controller('AppBundle\\Controller\\EnMarche\\AdherentController:listCommitteesAlAction')) }}
        {% endset %}
        {% set adherent_citizen_projects %}
            {{ render(controller('AppBundle\\Controller\\EnMarche\\AdherentController:listMyCitizenProjectsAction')) }}
        {% endset %}
        {% set administrated_citizen_projects %}
            {{ render(controller('AppBundle\\Controller\\EnMarche\\AdherentController:listMyAdministratedCitizenProjectsAction')) }}
        {% endset %}
    {% endif %}
    <!--  Header / Navigation Desktop -->
    {{ include('components/_nav_desktop.html.twig') }}
    <!--  Header / Navigation Mobile-->
    {{ include('components/_nav_mobile.html.twig') }}
</header>
